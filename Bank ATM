class BankAccount:

    # initialize account with pin & history
    def __init__(self, name, pin, balance = 0):
        self.name = name
        self.pin = pin
        self.balance = balance
        self.history = []

    # deposit money
    def deposit(self, amount):
        self.balance += amount
        self.history.append(f"Deposited Rs.(amount)")
        print(f"Rs.(amount) deposited! New Balance: Rs.(self.balance)")

    # withdraw money
    def withdraw(self, amount):
        if amount <= self.balance:
            self.balance -= amount
            self.history.append(f"Withdrew Rs.{amount}")

            print(f"Rs{amount} withdrawn! New Balance: ${self.balance}")
        else:
            print("Insufficient Balance!")

    # show balance
    def show_balance(self):
        print(f"Account Holder: {self.name}, Balance: Rs.{self.balance}")

    # show transaction history
    def show_history(self):
        print("\n--- Transaction History ---")
        for t in self.history:
            print(t) if self.history else print("No transactions yet!")

# --- Main Program ---

name = input("Enter Your Name: ")

pin = input("Set a 4-digit PIN: ")

account = BankAccount(name, pin)

# ask for PIN before access

if input("Enter PIN to login: ") != account.pin:
    print("Wrong PIN! Access Denied.")

    exit()

while True:
    print("\n1.Deposit 2.Withdraw 3.Show Balance 4.History 5.Exit")

    choice = input("Choose: ")

    if choice == "1":
        account.deposit(int(input("Enter Amount in Rs.: ")))

    elif choice == "2":
        account.withdraw(int(input("Enter Amount in Rs.: ")))

    elif choice == "3":
        account.show_balance()

    elif choice == "4":
        account.show_history()

    elif choice == "5":
        print("Thank You for banking with us, Have a nice day!!")

        break

    else:
        print("Invalid Choice!")
