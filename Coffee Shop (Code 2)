class Coffee:
    def __init__(self, name, price):
        self.name = name
        self.price = price

class Order:
    def __init__(self):
        self.items = []

    def add_item(self, coffee):
        self.items.append(coffee)
        print(f"âœ… Added '{coffee.name}' (â‚¹{coffee.price}) to your cart.")

    def total(self):
        return sum(item.price for item in self.items)

    def show_order(self):
        if not self.items:
            print("ğŸ›’ Your cart is empty.")
            return
        print("\nğŸ§¾ Your Order Summary:")
        for i, item in enumerate(self.items, 1):
            print(f"{i}. {item.name} - â‚¹{item.price}")
        print(f"ğŸ’° Total: â‚¹{self.total()}\n")

    def checkout(self):
        if not self.items:
            print("âŒ Cannot checkout. Your cart is empty.")
            return
        self.show_order()
        confirm = input("âœ… Proceed to checkout? (yes/no): ").strip().lower()
        if confirm == 'yes':
            print("ğŸ‰ Order confirmed! Thank you for choosing Indian Coffee â˜•")
            self.items.clear()
        else:
            print("ğŸ›‘ Checkout cancelled. You can continue shopping.")

def main():
    menu = [
        Coffee("Filter Coffee", 40),
        Coffee("Masala Chai", 30),
        Coffee("Cold Coffee", 60),
        Coffee("South Indian Degree Coffee", 50),
        Coffee("Espresso (Indian Blend)", 70),
        Coffee("Cappuccino", 80)
    ]

    order = Order()

    while True:
        print("\nğŸ‡®ğŸ‡³ --- Indian Coffee Menu ---")
        for i, coffee in enumerate(menu, 1):
            print(f"{i}. {coffee.name} - â‚¹{coffee.price}")
        print("7. ğŸ›’ View Cart")
        print("8. âœ… Checkout")
        print("9. ğŸšª Exit")

        user_choice = input("ğŸ‘‰ Choose an option (1-9): ").strip()

        if user_choice in [str(i) for i in range(1, 7)]:
            order.add_item(menu[int(user_choice) - 1])
        elif user_choice == '7':
            order.show_order()
        elif user_choice == '8':
            order.checkout()
        elif user_choice == '9':
            print("ğŸ™ Thank you! Visit again for more Indian coffee delights â˜•")
            break
        else:
            print("âŒ Invalid choice. Please try again.")

if __name__ == "__main__":
    main()
