class Coffee:
    def __init__(self, name, price):
        self.name = name
        self.price = price

class Order:
    def __init__(self):
        self.items = []

    def add_item(self, coffee):
        self.items.append(coffee)
        print(f"✅ Added '{coffee.name}' (₹{coffee.price}) to your cart.")

    def total(self):
        return sum(item.price for item in self.items)

    def show_order(self):
        if not self.items:
            print("🛒 Your cart is empty.")
            return
        print("\n🧾 Your Order Summary:")
        for i, item in enumerate(self.items, 1):
            print(f"{i}. {item.name} - ₹{item.price}")
        print(f"💰 Total: ₹{self.total()}\n")

    def checkout(self):
        if not self.items:
            print("❌ Cannot checkout. Your cart is empty.")
            return
        self.show_order()
        confirm = input("✅ Proceed to checkout? (yes/no): ").strip().lower()
        if confirm == 'yes':
            print("🎉 Order confirmed! Thank you for choosing Indian Coffee ☕")
            self.items.clear()
        else:
            print("🛑 Checkout cancelled. You can continue shopping.")

def main():
    menu = [
        Coffee("Filter Coffee", 40),
        Coffee("Masala Chai", 30),
        Coffee("Cold Coffee", 60),
        Coffee("South Indian Degree Coffee", 50),
        Coffee("Espresso (Indian Blend)", 70),
        Coffee("Cappuccino", 80)
    ]

    order = Order()

    while True:
        print("\n🇮🇳 --- Indian Coffee Menu ---")
        for i, coffee in enumerate(menu, 1):
            print(f"{i}. {coffee.name} - ₹{coffee.price}")
        print("7. 🛒 View Cart")
        print("8. ✅ Checkout")
        print("9. 🚪 Exit")

        user_choice = input("👉 Choose an option (1-9): ").strip()

        if user_choice in [str(i) for i in range(1, 7)]:
            order.add_item(menu[int(user_choice) - 1])
        elif user_choice == '7':
            order.show_order()
        elif user_choice == '8':
            order.checkout()
        elif user_choice == '9':
            print("🙏 Thank you! Visit again for more Indian coffee delights ☕")
            break
        else:
            print("❌ Invalid choice. Please try again.")

if __name__ == "__main__":
    main()
