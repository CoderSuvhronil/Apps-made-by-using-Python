from random import choice

class Coffee:
    def __init__(self, name, price):  # Fixed constructor name
        self.name = name
        self.price = price

class Order:
    def __init__(self):  # Fixed constructor name
        self.items = []

    def add_item(self, coffee):
        self.items.append(coffee)
        print(f"Added {coffee.name} to your order.")

    def total(self):
        return sum(item.price for item in self.items)

    def show_order(self):
        if not self.items:
            print("No items in order.")
            return
        print("\nYour Order:")
        for i, item in enumerate(self.items, 1):
            print(f"{i}. {item.name} - ${item.price}")
        print(f"Total: ${self.total()}\n")

    def checkout(self):
        if not self.items:
            print("Your cart is empty.")
            return
        self.show_order()
        confirm = input("Proceed to checkout? (Yes / No): ").strip().lower()
        if confirm == 'yes':  # Fixed string comparison
            print("Order confirmed! Thank You.")
            self.items.clear()
        else:
            print("Checkout cancelled.")

def main():
    menu = [
        Coffee("Espresso", 2.5),
        Coffee("Latte", 3.5),
        Coffee("Cappuccino", 3.0),
        Coffee("Americano", 2.0)
    ]

    order = Order()

    while True:
        print("\n--- Coffee Menu ---")
        for i, coffee in enumerate(menu, 1):
            print(f"{i}. {coffee.name} - ${coffee.price}")
        print("5. View Orders")
        print("6. Checkout")
        print("7. Exit")

        user_choice = input("Choose an option: ")

        if user_choice in ['1', '2', '3', '4']:
            order.add_item(menu[int(user_choice) - 1])
        elif user_choice == '5':
            order.show_order()
        elif user_choice == '6':
            order.checkout()
        elif user_choice == '7':
            print("Thank You! Visit Again ðŸ¥°")
            break
        else:
            print("Invalid Choice. Try Again.")

if __name__ == "__main__":
    main()
