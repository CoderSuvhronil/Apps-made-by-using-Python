from platform import system

class Flight:
    # create flight
    def __init__(self, code, seats, price):
        self.code = code
        self.seats = seats
        self.price = price

class FlightBookingSystem:
    # init system
    def __init__(self):
        self.flights = {}
        self.ticket_id = 1

    # add flight
    def add_flight(self, code, seats, price):
        self.flights[code]= Flight(code, seats, price)

    # view all flights
    def view_flights(self):
        for f in self.flights.values():
            print(f"{f.code} | Seats Left: {f.seats} | Price: Rs.{f.price}")

    # book a seat
    def book_seat(self, code):
        if code in self.flights and self.flights[code].seats > 0:
            self.flights[code].seats -= 1
            print("‚úÖ Seat booked!")
            return self.flights[code].price
        else:
            print("‚ùå Not available!")

            return None

    # process payment
    def pay(self, amount):
        print(f"üí≥ Payment of Rs.{amount} successful!")

    # generate ticket_receipt(self, flight_code, amount):
    def generate_ticket(self, flight_code, amount):
        print("\nüßæ ===== TICKET RECEIPT =====")
        print(f"Ticket ID: {self.ticket_id}")
        print(f"Flight Code: {flight_code}")
        print(f"Amount Paid: ${amount}")
        print("Status: Confirmed")
        print("===========================================")

        self.ticket_id += 1

system = FlightBookingSystem()

while True:
    print("\n‚úàÔ∏è Flight Booking System")
    print("1. Add Flight")
    print("2. View Flights")
    print("3. Book & Pay")
    print("4. Exit")

    ch = input("Select option: ")

    if ch == "1":
        code = input("Enter Flight code: ")
        seats = int(input("Enter total seats: "))
        price = int(input("Enter Ticket price: Rs."))
        system.add_flight(code, seats, price)

    elif ch == "2":
        system.view_flights()

    elif ch == "3":
        code = input("Enter Flight Code: ")
        price = system.book_seat(code)

        if price:
            confirm = input(f"Pay Rs.{price}? (y/n): ")

            if confirm.lower() == "y":
                system.pay(price)
                system.generate_ticket(code, price)
            else:
                print("‚ùå Payment canceled!")

    elif ch ==  "4":
        print("üëãüèª Goodbye!")

        break

    else:
        print("Invalid option!")
